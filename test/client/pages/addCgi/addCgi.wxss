/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.container{
  display: inline-table;
  margin: 0 auto;
  width: 80%;
}

.ch-title{
  font-weight: bold;
}

#selectedLable{
  height: auto;
}

.label-item{
    float: left; 
    background-color: white;
    padding: 2px 10px;
    margin-top:5px;
    margin-left: 5px;
    font-weight: bold;
}
 #ch-exp{
  position: relative;
  margin-top: 50%;
} 
.label-selected{
    float: left; 
    padding: 3px 10px;
    margin-top:5px;
    margin-left: 2px;
    font-weight: bold;
}

.minus-label{
  width:15px;
  height:15px;
  margin-left: 3px;
}
.error{
  font-size: 10px;
  color: red;
  margin-left: 10px;
  margin-top: 10px;
}