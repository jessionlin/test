/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    width: 100%;
    height: 100%;
    font-size: 25rpx;
}
.container{
    width: 100%;
    height: 100%;
}

.carrousel{
  width: 100%;
  height: 40%;
  background-color: #000;
}

.swiper{
  width: 100%;
  height: 400rpx;
}

.operation_panel{
  width: 600rpx;
  margin: 0 auto;
  height: auto;
}
.operation_box{
  display: inline-block;
  width: 300rpx;
  height: auto;
  margin-top: 50rpx;
}
.operation_tip{
  text-align: center;
  margin-top: 10rpx;
}
.operation{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  /* border: 1px solid #ddd;
  box-shadow: 0 0 8rpx 8rpx #ddd; */
  font-size: 25rpx;
  text-align: center;
  line-height: 150rpx;
  border-radius: 75rpx;
  border: 1px solid #ddd;
}