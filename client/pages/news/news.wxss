/* pages/news/news.wxss */
page{
  background-color: #F6F6F6;
}
.list_panel{

}
.item_panel{
  width: 100%;
  /* padding: 10rpx; */
  background-color: #fff;
  position: relative;
  border-bottom: 1px solid #ddd;
  height: 160rpx;
}
.item_image{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  height: 140rpx;
  width: 140rpx;
}
.item_title{
  position: absolute;
  width: 560rpx;
  height: 60rpx;
  left: 170rpx;
  top: 10rpx;
  font-size: 30rpx;
}
.item_content{
  position: absolute;
  width: 560rpx;
  height: 40rpx;
  left: 170rpx;
  top: 70rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space: nowrap;/*加宽度width属来兼容部分浏览*/
  font-size: 25rpx;
}
.item_date{
  position: absolute;
  width: 200rpx;
  left: 170rpx;
  top: 120rpx;
  color: #ddd;
  font-size: 20rpx;
}
.tip{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 40%;
  margin: 0 auto;
  text-align: center;
  color: #777;
}