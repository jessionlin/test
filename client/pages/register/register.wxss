.input_style{
  width: 100%;
  margin-left: 5%;
}
.input_style input{
  width: 85%;
  margin-top: 10px;
  margin-left: 5px;
  border:  2px solid #e0e0e0;
  border-radius: 5px;
  font-size: 13px;
}
.next-btn{
  margin-top: 10px;
  float: right;
  margin-right: 12%;
}
.prev-btn{
  margin-top: 10px;
  float: left;
