}
.demo-text{
  position: relative;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.select-style{
    margin-top: 10px;
    display: inline-flex;
    flex-direction: row;
    font-size: 14px;
}
.select-title{
  flex-grow:1;
  flex-shrink: 1;
}
.select-content{
  border: 1px solid #e0e0e0;
  display: inline-flex;
  flex-grow:2;
  flex-shrink: 2;
  margin-left: 5px;
  width: 160px;
  text-align: center;
}
.select-content view:nth-child(2n-1){
  width: 90%;
  text-align: center;
}
.down-triangle{
  width: 10%;
  text-align: right;
  font-size: 12px;
}

